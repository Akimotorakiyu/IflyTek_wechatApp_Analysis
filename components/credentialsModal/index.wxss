.credentials-modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.7;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.credentials-modal-dialog {
    width: 100%;
    overflow: hidden;
    position: fixed;
    top: 50%;
    transform: translateY(-50%);
    left: 0;
    z-index: 9999;
    background: transparent;
    border-radius: 6rpx;
    padding: 0 60rpx;
    box-sizing: border-box;
}

.credentials-modal-close {
    background-color: transparent;
    overflow: hidden;
}

.credentials-modal-content {
    background-color: transparent;
    width: 100%;
    clear: both;
}

.credentials-modal-footer {
    background: transparent;
    display: flex;
}

.credentials-btn-close {
    background-color: transparent;
    background-position: center;
    background-origin: center;
    background-size: contain;
    background-repeat: no-repeat;
    height: 60rpx;
    width: 60rpx;
    float: right;
    margin-bottom: 10rpx;
}

.credentials-btn-close image {
    width: 60rpx;
    height: 60rpx;
}

.credentials-btn {
    flex: 1;
    -webkit-box-flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    text-align: center;
    margin-top: 30rpx;
    box-sizing: border-box;
    border: 0!important;
    outline: 0;
    background: linear-gradient(270deg,#EBB87E 0%,#CD9B63 100%);
    border-radius: 61px;
    font-size: 30rpx;
    color: #fff;
}

.credentials-btn+.credentials-btn {
    margin-left: 50rpx;
}

.credentials-btn-cancel {
    background: linear-gradient(270deg,#EBB87E 0%,#CD9B63 100%);
}

.credentials-btn-confirm {
}

.credentials-btn-confirm.disabled {
    opacity: 0.4;
}