.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 600rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #fff;
    margin: -280rpx 75rpx;
    border-radius: 6rpx;
    border: 1px solid #DEDEDE;
}

.modal-title {
    padding-top: 42rpx;
    font-size: 36rpx;
    color: #333;
    text-align: center;
}

.modal-content {
    padding: 0;
    max-height: 400rpx;
    overflow-y: auto;
    font-size: 28rpx;
    color: #333;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #DEDEDE;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-cancel {
    flex: 1;
    -webkit-box-flex: 1;
    color: #333;
    text-align: center;
}

.btn-confirm {
    flex: 1;
    -webkit-box-flex: 1;
    width: 50%;
    color: #333;
    text-align: center;
    border-left: 1px solid #efefef;
}

.close-icon {
    position: absolute;
    top: 20rpx;
    right: 0rpx;
    height: 32rpx;
    width: 32rpx;
    color: #666;
    padding: 0 20rpx;
}