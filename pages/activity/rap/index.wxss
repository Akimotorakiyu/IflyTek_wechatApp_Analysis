.page-rap {
    background-image: url("http://s1.haitunvoice.com/liusheng-mini-app/images/bj-rap-min.png?t=2018082301");
    background-position: 0 0;
    font-size: 0;
    min-height: 1183rpx;
    position: relative;
    overflow: hidden;
}

.top-header-img {
    width: 750rpx;
}

.lrc-wrapper {
    height: 438rpx;
    position: relative;
    overflow: hidden;
}

.lrc-wrapper-bg {
    position: absolute;
    width: 710rpx;
    height: 438rpx;
    left: 20rpx;
}

.lrc-wrapper .pause-mask {
    position: absolute;
    top: 0;
    width: 100%;
    bottom: 0;
    background: transparent;
    text-align: center;
}

.pause-mask image {
    height: 196rpx;
    width: 196rpx;
    margin-top: 121rpx;
}

.audio-bar-wrapper {
    width: 651rpx;
    height: 94rpx;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
    top: 26rpx;
}

.slider-bar-wrapper {
    display: flex;
    position: absolute;
    left: 15rpx;
    right: 15rpx;
    top: 10rpx;
}

.audio-rap-control+.slider-bar-wrapper {
    left: 95rpx;
}

.slider-bar-wrapper .total-time,.slider-bar-wrapper .cur-time {
    display: flex;
    font-size: 26rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: justify;
    line-height: 40rpx;
}

.slider-bar-wrapper .cur-time {
}

.slider-bar-wrapper .slider-bar {
    width: 100%;
    line-height: 1em;
    height: 1em;
    font-size: 40rpx;
    margin: 0rpx 26rpx 0;
}

.slider-bar-wrapper .total-time {
}

.audio-rap-control {
    float: left;
    width: 80rpx;
    text-align: center;
    font-size: 0;
}

.audio-rap-control .audio-control {
    display: inline-block;
    height: 58rpx;
    width: 58rpx;
    border: 1px splid #ccc;
    background: #eee;
    border-radius: 50%;
}

.audio-control .audio-control-icon {
    height: 58rpx;
    width: 58rpx;
}

.audio-control-icon.spin {
    animation: rotate 1s linear infinite;
    height: 28rpx;
    width: 28rpx;
    margin-top: 15rpx;
}

.current-lrc {
    color: blue;
    font-size: 40rpx;
    text-align: center;
}

.lrc-view {
    width: 100%;
    height: 244rpx;
    margin-top: 58rpx;
}

.lrc-text {
    line-height: 64rpx;
    font-family: PingFangSC;
    font-size: 32rpx;
    color: #fff;
    letter-spacing: -1.39px;
    text-align: center;
}

.lrc-text.active {
    color: #3AC2FF;
}

.lrc-text.active {
    text-align: center;
}

.footer-bar-wrapper {
    width: 100%;
    background: transparent;
    box-sizing: content-box;
    padding-top: 40rpx;
    position: absolute;
    left: 0;
    bottom: 48.6rpx;
}

.footer-btns {
    display: flex;
    margin: 28.8rpx 41.6rpx 0;
}

.footer-btns ._btn+._btn {
    margin-left: 14rpx;
}

._btn ._btn-icon {
    height: 86rpx;
    width: 86rpx;
}

._btn::after {
    border: 0!important;
    box-shadow: 0;
    outline: none;
    font-size: 24rpx;
}

button {
    border: 0!important;
    box-shadow: 0 0 0 0;
}

.entry-btn {
    position: relative;
    height: 95.5rpx;
    width: 666.66rpx;
    text-align: center;
    margin: 0 auto;
    color: #fff;
    background: #0F256B!important;
    border-radius: 95.5rpx;
    font-size: 36rpx;
    vertical-align: middle;
    padding: 0;
}

._btn ._btn-icon {
    height: 36rpx;
    width: 36rpx;
    vertical-align: middle;
}

._btn ._btn-text {
    width: 100%;
    font-size: 30rpx;
    line-height: 95.5rpx;
    color: #fff;
    text-align: center;
    margin-left: 18rpx;
}