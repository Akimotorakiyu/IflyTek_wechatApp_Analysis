.page-content {
    color: #fff;
    box-sizing: border-box;
}

.page-worldcup {
    padding: 30rpx;
    box-sizing: border-box;
}

.page-custom-children {
    padding: 52rpx 30rpx 30rpx;
    box-sizing: border-box;
}

.page-custom-children-v1_2_1 {
    background-size: 100% 100%!important;
    background-size: 100% 100vh!important;
}

.article-content-wrapper {
    background: #212D61;
    border-radius: 10rpx;
    opacity: 0.8;
    position: relative;
    top: 105rpx;
    overflow: visible;
    width: 630rpx;
    left: 30rpx;
    padding-bottom: 30rpx;
    box-sizing: border-box;
    padding-top: 261rpx;
}

.page-worldcup {
    height: 100vh;
    padding-bottom: 0;
}

.page-newsflash-header {
    text-align: center;
    padding: 20rpx 0 22rpx 0;
    flex: 1;
}

.page-newsflash-logo {
    height: 144rpx;
    width: 162rpx;
    float: left;
    margin: 0;
}

.page-newsflash-title {
    font-size: 52rpx;
    color: #fff;
    text-align: left;
    line-height: 142rpx;
    padding-right: 60rpx;
}

.article-content-container {
    padding: 0 56rpx 0;
}

.audio-container {
    width: 100%;
    position: absolute;
    left: 0;
    top: 220rpx;
    z-index: 2;
}

.article-title-container {
    position: relative;
    padding-top: 22rpx;
    text-align: justify;
    padding: 0 30rpx;
    overflow: hidden;
}

.article-title {
    font-family: PingFangSC;
    font-size: 35rpx;
    color: #1096FF;
    margin: 0;
    letter-spacing: -1.6rpx;
    text-align: justify;
    line-height: 52rpx;
    position: absolute;
    right: 30rpx;
    left: 164rpx;
    top: 50%;
    transform: translateY(-50%);
}

.video-content-wrapper .article-title {
    text-align: justify;
    font-size: 44rpx;
}

.article-rel-container {
    height: 30rpx;
    margin: 24rpx 0;
}

.rel-pv {
    font-size: 24rpx;
    color: #fff;
    opacity: 0.6;
    line-height: 30rpx;
}

.article-content text {
    font-size: 32rpx;
    word-break: break-all;
    text-align: justify;
    color: #fff;
    opacity: 0.8;
}

.article-content text.active {
    color: #0c9dff;
    opacity: 0.6;
}

.full-audio-bar-container {
    flex-direction: row;
    box-sizing: border-box;
    border-radius: 8rpx;
    padding: 0 60rpx;
}

.full-audio-bar-container .block-flex {
}

.full-audio-bar-container .block-left {
    position: relative;
    text-align: center;
    left: 50%;
    transform: translateX(-50%);
}

.full-audio-bar-container .block-right-btn {
    width: 80rpx;
    height: 120rpx;
    flex: none;
    -webkit-box-flex: none;
    display: none;
}

.block-right-btn .btn-icon {
    width: 40rpx;
    height: 40rpx;
    margin: 40rpx 0 0 5rpx;
}

.vcn-avatar {
    display: inline-block;
}

.block-left image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.block-left .audio-control-icon {
    height: 60rpx;
    width: 60rpx;
    position: absolute;
    top: 48rpx;
    left: 45rpx;
}

.block-left .audio-control-icon.spin {
    animation: rotate 1s linear infinite;
    height: 50rpx;
    width: 50rpx;
    position: absolute;
    top: 55rpx;
    left: 50rpx;
}

.block-right .option-bar-wrapper {
    box-sizing: border-box;
}

.option-bar-wrapper .vcn-desc {
    margin-top: 28rpx;
    line-height: 26rpx;
    color: #999;
    opacity: 0.7;
    font-size: 26rpx;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
}

.vcn-desc .from {
    color: #999;
    font-size: 26rpx;
    display: block;
    margin-top: 6rpx;
}

.option-bar-wrapper .options-bar {
    width: 260rpx;
    text-align: justify;
}

.options-bar .option-btn {
    width: 120rpx;
    font-size: 24rpx;
    display: inline-block;
    height: 46rpx;
    line-height: 46rpx;
    margin-top: 17rpx;
    border-radius: 23rpx;
    text-align: center;
    border: 1px solid #0c9dff;
    background-color: #fff!important;
    color: #0c9dff;
    z-index: 3;
}

.options-bar .speed-change-btn {
    float: right;
}

.block-right .time-slide-bar {
    margin-top: 30rpx;
}

.voice-wave-wp {
    text-align: center;
}

.time-slide-bar .voice-wave {
    width: 508rpx;
    height: 71rpx;
}

.time-slide-bar slider {
    position: relative;
}

.time-slide-bar slider .slider-info {
    font-size: 24rpx;
    position: absolute;
    top: 32rpx;
    width: 100%;
    color: #999999;
}

.slider-info .current-time {
    float: left;
}

.slider-info .total-time {
    float: right;
}

.footer-bar-wrapper {
    width: 100%;
    background: transparent;
    box-sizing: content-box;
    padding-top: 40rpx;
    position: fixed;
    left: 0;
    bottom: 50rpx;
}

.footer-btns {
    display: flex;
    margin: 0 60rpx;
}

.footer-btns button {
    padding: 0;
}

.footer-btns .btn {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    background: transparent;
    font-family: PingFangSC;
    color: #F7F7F7;
    letter-spacing: 0;
    text-align: center;
    background-image: linear-gradient(-90deg,#2E99F6 0%,#A81AB7 100%);
    border-radius: 100rpx;
}

.footer-btns .btn+.btn {
    margin-left: 80rpx;
}

.btn ._btn-icon {
    height: 48rpx;
    width: 48rpx;
    margin-right: 10rpx;
    margin-top: -5rpx;
    vertical-align: middle;
}

.btn::after {
    border: 0!important;
    box-shadow: 0;
    outline: none;
    font-size: 24rpx;
}

button {
    border: 0!important;
    box-shadow: 0 0 0 0;
}

.btn-page {
    height: 100vh;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: transparent;
}

.video-wrapper {
    text-align: center;
    position: relative;
    left: 0;
    top: 60rpx;
}

.video-card {
    height: 410rpx;
    width: 420rpx;
    left: 135rpx;
    position: absolute;
}

.video-card::after {
    overflow: hidden;
    display: block;
    content: '';
    clear: both;
}

.video-card-tip {
    margin-top: 48rpx;
    font-size: 28rpx;
    color: #fff;
    opacity: 0.6;
    text-align: center;
    position: absolute;
    width: 100%;
    left: 0;
    top: 400rpx;
}

.video-content-wrapper {
    margin-top: 80rpx;
}

.page-error {
    font-size: 28rpx;
    color: #fff;
    opacity: 0.8;
    text-align: center;
    margin-top: 30rpx;
}

.block-left-top,.block-bottom-right {
    position: fixed;
}

.block-left-top {
    height: 298rpx;
    width: 215rpx;
    z-index: 3;
    top: 270rpx;
}

.block-bottom-right {
    height: 215rpx;
    width: 252rpx;
    z-index: 3;
    bottom: 180rpx;
    right: 30rpx;
}