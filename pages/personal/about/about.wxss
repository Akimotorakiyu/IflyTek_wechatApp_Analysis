.about-logo-part {
    position: relative;
    width: 100%;
    height: 420rpx;
    text-align: center;
    background: transparent;
}

.about-logo-icon {
    position: relative;
    width: 160rpx;
    height: 160rpx;
    margin-top: 100rpx;
    border-radius: 50rpx;
}

.about-name-text {
    position: relative;
    color: #0F0F0F;
    font-size: 32rpx;
    top: 20rpx;
}

.about-item {
    height: 120rpx;
    position: relative;
    background: #FFF;
}

.about-item-icon {
    position: absolute;
    width: 14rpx;
    height: 26rpx;
    right: 32rpx;
    top: 31rpx;
}

.about-item-text {
    position: relative;
    font-size: 32rpx;
    color: #CD9B63;
    line-height: 120rpx;
    vertical-align: middle;
    text-align: center;
}

.about-item-divider {
    position: relative;
    height: 1px;
    opacity: 0.4;
    background: rgba(255,255,255,1);
    margin-left: 32rpx;
    margin-right: 32rpx;
    top: 0rpx;
}

.about-sub-part {
    position: relative;
    width: 100%;
    text-align: center;
    height: 422rpx;
    margin-top: 30rpx;
    background: #fff;
}

.about-sub-icon {
    position: absolute;
    width: 222rpx;
    height: 222rpx;
    left: 50%;
    top: 140rpx;
    margin-left: -111rpx;
}

.about-sub-text {
    position: relative;
    font-size: 32rpx;
    color: #CD9B63;
    top: 44rpx;
}