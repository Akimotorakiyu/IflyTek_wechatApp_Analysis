.history-page {
}

.history-header {
    position: fixed;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 120rpx;
    top: 0;
    z-index: 99;
    background: #F9F9F9;
}

.history-header .history-count {
    font-size: 30rpx;
    margin-left: 32rpx;
    color: #666;
}

.history-header .header-item-btns {
    position: relative;
    width: 108rpx;
    height: 48rpx;
    border: 1px solid #CD9B63;
    border-radius: 24rpx;
    right: 32rpx;
    text-align: center;
}

.header-item-btns .item-btn-text {
    font-size: 30rpx;
    color: #CD9B63;
    line-height: 48rpx;
    position: relative;
}

.history-items-scrolview {
    position: relative;
    height: 100vh;
    width: 100%;
    padding-top: 120rpx;
    box-sizing: border-box;
    background: #FFF;
}

.history-item-list {
    position: relative;
}

.history-item-root {
    position: relative;
    display: flex;
    flex-direction: column;
}

.history-item {
    position: relative;
    display: flex;
    width: 100%;
    height: 198rpx;
    margin: 0rpx 10rpx 0rpx 10rpx;
    justify-content: space-between;
    align-items: center;
}

.history-item-title {
    position: relative;
    width: 560rpx;
    color: #333;
    font-size: 36rpx;
    line-height: 36rpx;
    left: 40rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.history-item-speaker {
    position: relative;
    color: #999;
    font-size: 26rpx;
    line-height: 26rpx;
    left: 40rpx;
    top: 20rpx;
}

.history-item-btn {
    width: 58rpx;
    height: 58rpx;
    padding-right: 60rpx;
}

.history-item-divider {
    position: relative;
    height: 1px;
    margin-left: 40rpx;
    margin-right: 0;
    background: #DDD;
}

.history-loading-item {
    font-size: 24rpx;
    width: 100%;
    height: 80rpx;
    color: #999;
    text-align: center;
}

.tip-content {
    text-align: left;
    padding: 62rpx 62rpx 62rpx 62rpx;
}

.hide {
    display: none;
}

.show {
    display: block;
}