.navigator-hover {
    background: #fff;
    opacity: 1;
}

.user-info {
    position: relative;
    height: 190rpx;
    background: #F9E9D7;
    vertical-align: middle;
}

.user-info .login-icon {
    width: 110rpx;
    height: 110rpx;
    position: relative;
    border-radius: 55rpx;
    left: 40rpx;
    top: 40rpx;
}

.user-info .nick-name {
    position: absolute;
    width: 12em;
    font-size: 38rpx;
    font-weight: 600;
    color: #333;
    left: 185rpx;
    transform: translateY(-50%);
    right: 40rpx;
    top: 50%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.common-all-item {
    background: #FFF;
    position: relative;
}

.common-all-item {
    margin-top: 30rpx;
}

.common-item {
    height: 132rpx;
    position: relative;
}

.common-item .common-left-icon {
    position: absolute;
    width: 44rpx;
    height: 44rpx;
    left: 40rpx;
    top: 40rpx;
    text-align: left;
}

.common-item .common-left-icon.icon-voices {
    width: 40rpx;
    height: 52rpx;
    top: 41rpx;
}

.common-item .common-left-icon.icon-history,.common-item .common-left-icon.icon-about {
    width: 44rpx;
    height: 44rpx;
    top: 45rpx;
}

.common-item .common-left-icon.icon-feedback {
    width: 44rpx;
    height: 40rpx;
    top: 47rpx;
}

.common-item .common-right-icon {
    position: absolute;
    width: 16rpx;
    height: 20rpx;
    right: 30rpx;
    top: 58rpx;
    text-align: right;
    opacity: 0.7;
}

.common-item .title-text {
    position: relative;
    font-size: 32rpx;
    line-height: 32rpx;
    color: #333;
    left: 120rpx;
    top: 50rpx;
}

.common-item .hint-text {
    position: absolute;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #999;
    right: 60rpx;
    top: 52rpx;
    text-align: right;
}

.common-divider {
    height: 1px;
    margin-left: 120rpx;
    margin-right: 0rpx;
    background: #ddd;
    position: relative;
}

.common-divider::after {
    position: absolute;
    content: '';
    height: 1px;
    width: 100%;
    background: #fff;
    top: 0.5px;
}

.personal-about-item {
    height: 88rpx;
    background: #204A8A;
    border: 1px solid #204A8A;
    border-radius: 20rpx;
    position: relative;
    margin: 40rpx 32rpx 0rpx 32rpx;
}

.personal-contact-button {
    position: absolute;
    width: 100%;
    height: 88rpx;
    opacity: 0;
    top: 0rpx;
}

.personal-getuserinfo-btn {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0rpx;
    opacity: 0;
    background: #ffffff;
}

.hide {
    display: none;
}

.show {
    display: block;
}